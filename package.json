{
  "name": "x-unfollow-checker",
  "version": "1.0.0",
  "description": "A powerful browser extension to identify X (Twitter) users who don't follow you back",
  "keywords": [
    "twitter",
    "x",
    "unfollow",
    "social-media",
    "browser-extension",
    "chrome-extension",
    "firefox-addon"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/Edmon02"
  },
  "license": "MIT",
  "homepage": "https://github.com/Edmon02/x-unfollow-checker",
  "repository": {
    "type": "git",
    "url": "https://github.com/Edmon02/x-unfollow-checker.git"
  },
  "bugs": {
    "url": "https://github.com/Edmon02/x-unfollow-checker/issues"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "test": "node scripts/test.js",
    "lint": "eslint *.js",
    "format": "prettier --write *.js *.css *.html *.json *.md",
    "validate": "node scripts/validate-manifest.js",
    "package": "node scripts/package.js",
    "zip": "node scripts/create-zip.js",
    "clean": "rimraf dist build *.zip"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "archiver": "^6.0.1",
    "jsonschema": "^1.4.1"
  },
  "browserslist": [
    "Chrome >= 88",
    "Firefox >= 109",
    "Edge >= 88"
  ],
  "extensionInfo": {
    "manifestVersion": 3,
    "platforms": ["chrome", "firefox", "edge"],
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "hostPermissions": [
      "https://x.com/*",
      "https://twitter.com/*"
    ]
  }
}
